<h1>Listing Users</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
      <th>Permissions</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td>
        <ul>
        <% user.roles.each do |role| %>
          <li><%= role.name %></li>
        <% end %>
        </ul>
        </td>
        <td>
        <ul>
        <% user.permissions.each do |per| %>
          <li><%= per.subject_class %> and <%= per.action %></li>
        <% end %>
        </ul>
        </td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Add Permission', edit_permissions_user_path(user) %></td>
        <td><%= link_to 'Reset Permission', reset_permissions_user_path(user), method: :put %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
