<h1>Editing User</h1>
<%= form_for @user, url: update_permissions_user_path(@user), method: :put do |f| %>
<span> Account: <%= @user.name %></span>
<br />
<table class="table table-striped">
	<tr>
		<th>Subject Class</th>
		<th>Action</th>
		<th>#{check_box_tag 'main', 0, false}</th>
	</tr>
	<% @permissions.each do |per| %>
	<tr>
		<td><%= per.subject_class %></td>
		<td><%= per.action %></td>
		<td><%= check_box_tag 'permissions[]', per.id, @user_total_permissions.include?(per.id), {array: true, class: "check_box"}%></td>
	</tr>
	<% end %>
</table>
<%= f.submit "Update", class: 'btn btn-primary' %>

<% end %>
<%= link_to 'Show', @user %> |
<%= link_to 'Back', users_path %>